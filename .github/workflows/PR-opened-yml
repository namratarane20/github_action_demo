name: PR Opened - Run Tests

# on:
#   pull_request:
#     types: [opened]

on:
  pull_request:
    types: [opened]
  push:
    branches:
      - main


jobs:
  test:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Run test script
        run: echo "Running tests for PR: ${{ github.event.pull_request.number }}"